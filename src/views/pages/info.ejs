                <br>
                <br>

                <div class="container">
                    <% if (data[3]) { data[3].forEach(function(item){ %>
                        <div class="card" style="width: 100%">
                            <div class="card-body">
                                <table>
                                    <tbody>
                                        <tr><%- item.skill %></tr>
                                        <br>
                                        <br>


                                        <form action="/info/rmSkill" method="POST" float="right">
