                                </form>
                                <form action="/info/rmSkill" method="POST" float="right">
                                    <input id="id" name="id" hidden value="<%= item.id %>" />
                                    <button type="submit">Delete</button>
                                </form>
                            </tbody>
                        </table>
                    </div>
                </div>
            <% }); %>
        </div>

        <br>

        <form action="/info/addLanguage" method="POST" id="languages">
            <h2>Languages</h2>

            <label for="language">Language</label>
            <input type="text" id="language" name="language" class="form-control" required />

            <label for="proficiency">Proficiency</label>
            <input type="text" id="proficiency" name="proficiency" class="form-control" required />

            <hr>

            <input type="submit" value="Add Info" class="btn btn-primary" style="float:right;" />
        </form>
        <br>
        <div class="container">
            <% data[4].forEach(function(item){ %>
                <div class="card" style="width: 100%">
                    <div class="card-body">
                        <table>
                            <tbody>

                                <tr><%- item.language %></tr>
                                <br>
                                <tr><%- item.proficiency %></tr>
                                <br>
                                <br>
                                <form action="/info/editLanguage" method="POST" float="right">
                                    <input id="id" name="id" hidden value="<%= item.id %>" />
