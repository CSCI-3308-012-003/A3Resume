<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>
<%- include ('../partials/message') %>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
        crossorigin="anonymous">
</head>

<main>
    <div class="container">
        <h1>Add Info</h1>

        <h2>General</h2>
        <% if (data[0][0]) { %>
            <tr><%- data[0][0].firstname %></tr>&nbsp;
            <tr><%- data[0][0].lastname %></tr>
            <br>
            <tr><%- data[0][0].dob %></tr>
            <br>
            <tr><%- data[0][0].email %></tr>
            <br>
            <tr><%- data[0][0].linkedin %></tr>
            <br>
            <tr><%- data[0][0].github %></tr>
            <form action="/info/editGeneral" method="POST" float="right">
                <input id="id" name="id" hidden value="<%= data[0][0].id %>" />
                <button type="submit">Edit</button>
            </form>
            <% } 
        else { %>
            <form action="/info/addGeneral" method="POST">

                <label for="firstname">First Name</label>
                <input type="text" id="firstname" name="firstname" class="form-control" required />

                <label for="lastname">Last Name</label>
                <input type="text" id="lastname" name="lastname" class="form-control" required />

                <label for="dob">Birthday</label>
                <input type="date" id="dob" name="dob" class="form-control" />

                <label for="email">Email</label>
                <input type="text" id="email" name="email" class="form-control" required />

                <label for="linkedin">LinkedIn</label>
                <input type="text" id="linkedin" name="linkedin" class="form-control" />

                <label for="github">GitHub</label>
                <input type="text" id="github" name="github" class="form-control" />

                <hr>

                <input type="submit" value="Add Info" class="btn btn-primary" style="float:right;" />
            </form>
        <% }%>
        
        <br>

        <form action="/info/addEducation" method="POST" id="education">
            <h2>Education</h2>

            <label for="school">School</label>
            <input type="text" id="school" name="school" class="form-control" required />

            <label for="degree">Degree</label>
            <input type="text" id="degree" name="degree" class="form-control" required />

            <label for="focus">Focus</label>
            <input type="text" id="focus" name="focus" class="form-control" />

            <label for="startDate">Start Date</label>
            <input type="date" id="startDate" name="startDate" class="form-control" required />

            <label for="endDate">End Date</label>
            <input type="date" id="endDate" name="endDate" class="form-control" required />

            <label for="description">Description</label>
            <input type="text" id="description" name="description" class="form-control" required />

            <hr>

            <input type="submit" value="Add Info" class="btn btn-primary" style="float:right;" />
        </form>
        <br>
        <div class="container">
            <% data[1].forEach(function(item){ %>
                <div class="card" style="width: 100%">
                    <div class="card-body">
                        <table>
                            <tbody>
                                <tr><%- item.school %></tr>
                                <br>
                                <tr><%- item.degree %></tr>
                                <br>
                                <tr><%- item.focus %></tr>
                                <br>
                                <tr><%- item.startDate %></tr>
                                <br>
                                <tr><%- item.endDate %></tr>
                                <br>
                                <tr><%- item.description %></tr>
                                <br>
                                <br>
                                <form action="/info/editEducation" method="POST" float="right">
                                    <input id="id" name="id" hidden value="<%= item.id %>" />
                                    <button type="submit">Edit</button>
                                </form>
                                <form action="/info/rmEducation" method="POST" float="right">
                                    <input id="id" name="id" hidden value="<%= item.id %>" />
                                    <button type="submit">Delete</button>
                                </form>
                            </tbody>
                        </table>
                    </div>
                </div>
            <% }); %>
        </div>

        <br>

        <form action="/info/addExperience" method="POST" id="experience">
            <h2>Experiences</h2>

            <label for="organization">Organization</label>
            <input type="text" id="organization" name="organization" class="form-control" required />

            <label for="title">Title</label>
            <input type="text" id="title" name="title" class="form-control" required />

            <label for="startDate">Start Date</label>
            <input type="date" id="startDate" name="startDate" class="form-control" required />

            <label for="endDate">End Date</label>
            <input type="date" id="endDate" name="endDate" class="form-control" required />

            <label for="description">Description</label>
            <input type="text" id="description" name="description" class="form-control" required />

            <hr>

            <input type="submit" value="Add Info" class="btn btn-primary" style="float:right;" />
        </form>
        <br>
        <div class="container">
            <% data[2].forEach(function(item){ %>
                <div class="card" style="width: 100%">
                    <div class="card-body">
                        <table>
                            <tbody>
                                <tr><%- item.organization %></tr>
                                <br>
                                <tr><%- item.title %></tr>
                                <br>
                                <tr><%- item.startDate %></tr>
                                <br>
                                <tr><%- item.endDate %></tr>
                                <br>
                                <tr><%- item.description %></tr>
                                <br>
                                <br>
                                <form action="/info/editExperience" method="POST" float="right">
                                    <input id="id" name="id" hidden value="<%= item.id %>" />
                                    <button type="submit">Edit</button>
                                </form>
                                <form action="/info/rmExperience" method="POST" float="right">
                                    <input id="id" name="id" hidden value="<%= item.id %>" />
                                    <button type="submit">Delete</button>
                                </form>
                            </tbody>
                        </table>
                    </div>
                </div>
            <% }); %>
        </div>

        <br>

        <form action="/info/addSkill" method="POST" id="skills">
            <h2>Skills</h2>

            <label for="skill">Skill</label>
            <input type="text" id="skill" name="skill" class="form-control" required />

            <hr>

            <input type="submit" value="Add Info" class="btn btn-primary" style="float:right;" />
        </form>
        <br>
        <div class="container">
            <% data[3].forEach(function(item){ %>
                <div class="card" style="width: 100%">
                    <div class="card-body">
                        <table>
                            <tbody>
                                <tr><%- item.skill %></tr>
                                <br>
                                <br>
                                <form action="/info/editSkill" method="POST" float="right">
                                    <input id="id" name="id" hidden value="<%= item.id %>" />
