                                </form>
                                <form action="/info/rmLanguage" method="POST" float="right">
                                    <input id="id" name="id" hidden value="<%= item.id %>" />
                                    <button type="submit">Delete</button>
                                </form>
                            </tbody>
                        </table>
                    </div>
                </div>
            <% }); %>
        </div>

        <br>

        <form action="/info/addLocation" method="POST" id="locations">
            <h2>Location</h2>

            <label for="country">Country</label>
            <input type="text" id="country" name="country" class="form-control" required />

            <label for="city">City</label>
            <input type="text" id="city" name="city" class="form-control" required />

            <hr>

            <input type="submit" value="Add Info" class="btn btn-primary" style="float:right;" />
        </form>
        <br>
        <div class="container">
            <% data[5].forEach(function(item){ %>
                <div class="card" style="width: 100%">
                    <div class="card-body">
                        <table>
                            <tbody>

                                <tr><%- item.country %></tr>
                                <br>
                                <tr><%- item.city %></tr>
                                <br>
                                <br>
                                <form action="/info/editLocation" method="POST" float="right">
                                    <input id="id" name="id" hidden value="<%= item.id %>" />
                                    <button type="submit">Edit</button>
                                </form>
                                <form action="/info/rmLocation" method="POST" float="right">
                                    <input id="id" name="id" hidden value="<%= item.id %>" />
                                    <button type="submit">Delete</button>
                                </form>
                            </tbody>
                        </table>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</main>

<%- include ('../partials/footer') %>