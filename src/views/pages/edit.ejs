<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
        crossorigin="anonymous">
</head>

<main>
    <div class="container">
        <h1>Edit Info</h1>

        <% if (data[0]) { %>
            <form action="/info/updateGeneral" method="POST">
                <h2>General</h2>

                <label for="firstname">First Name</label>
                <input type="text" id="firstname" name="firstname" class="form-control" required value="<%= data[0][0].firstname %>"/>

                <label for="lastname">Last Name</label>
                <input type="text" id="lastname" name="lastname" class="form-control" required value="<%= data[0][0].lastname %>"/>

                <label for="dob">Birthday</label>
                <input type="date" id="dob" name="dob" class="form-control" value="<%= data[0][0].dob %>"/>

                <label for="email">Email</label>
                <input type="text" id="email" name="email" class="form-control" required value="<%= data[0][0].email %>"/>

                <label for="linkedin">LinkedIn</label>
                <input type="text" id="linkedin" name="linkedin" class="form-control" value="<%= data[0][0].linkedin %>"/>

                <label for="github">GitHub</label>
                <input type="text" id="github" name="github" class="form-control" value="<%= data[0][0].github %>"/>

                <input id="id" name="id" hidden value="<%= data[0][0].id %>" />

                <hr>

                <!-- <form action="/info" method="GET" float="right">
                    <button type="submit">Cancel</button>
                </form> -->
                <input type="submit" value="Update Info" class="btn btn-primary" style="float:right;" />
            </form>
        <% } %>
        
        <% if (data[1]) { %>
            <form action="/info/updateEducation" method="POST" id="education">
                <h2>Education</h2>

                <label for="school">School</label>
                <input type="text" id="school" name="school" class="form-control" required value="<%= data[1][0].school %>"/>

                <label for="degree">Degree</label>
                <input type="text" id="degree" name="degree" class="form-control" required value="<%= data[1][0].degree %>"/>

                <label for="focus">Focus</label>
                <input type="text" id="focus" name="focus" class="form-control" value="<%= data[1][0].focus %>"/>

                <label for="startDate">Start Date</label>
                <input type="date" id="startDate" name="startDate" class="form-control" required value="<%= data[1][0].startDate %>"/>

                <label for="endDate">End Date</label>
                <input type="date" id="endDate" name="endDate" class="form-control" required value="<%= data[1][0].endDate %>"/>

                <label for="description">Description</label>
                <input type="text" id="description" name="description" class="form-control" required value="<%= data[1][0].description %>"/>

                <input id="id" name="id" hidden value="<%= data[1][0].id %>" />

                <hr>

                <input type="submit" value="Update Info" class="btn btn-primary" style="float:right;" />
            </form>
        <% } %>

        <% if (data[2]) { %>
            <form action="/info/updateExperience" method="POST" id="experience">
                <h2>Experiences</h2>

                <label for="organization">Organization</label>
                <input type="text" id="organization" name="organization" class="form-control" required value="<%= data[2][0].organization %>"/>

                <label for="title">Title</label>
                <input type="text" id="title" name="title" class="form-control" required value="<%= data[2][0].title %>"/>

                <label for="startDate">Start Date</label>
                <input type="date" id="startDate" name="startDate" class="form-control" required value="<%= data[2][0].startDate %>"/>

                <label for="endDate">End Date</label>
                <input type="date" id="endDate" name="endDate" class="form-control" required value="<%= data[2][0].endDate %>"/>

                <label for="description">Description</label>
                <input type="text" id="description" name="description" class="form-control" required value="<%= data[2][0].description %>"/>

                <input id="id" name="id" hidden value="<%= data[2][0].id %>" />

                <hr>

                <input type="submit" value="Update Info" class="btn btn-primary" style="float:right;" />
            </form>
        <% } %>

        <% if (data[3]) { %>
            <form action="/info/updateSkill" method="POST" id="skills">
                <h2>Skills</h2>

                <label for="skill">Skill</label>
                <input type="text" id="skill" name="skill" class="form-control" required value="<%= data[3][0].skill %>"/>

                <input id="id" name="id" hidden value="<%= data[3][0].id %>" />

                <hr>

                <input type="submit" value="Update Info" class="btn btn-primary" style="float:right;" />
            </form>
        <% } %>

        <% if (data[4]) { %>
            <form action="/info/updateLanguage" method="POST" id="languages">
                <h2>Languages</h2>

                <label for="language">Language</label>
                <input type="text" id="language" name="language" class="form-control" required value="<%= data[4][0].language %>"/>

                <label for="proficiency">Proficiency</label>
                <input type="text" id="proficiency" name="proficiency" class="form-control" required value="<%= data[4][0].proficiency %>"/>

                <input id="id" name="id" hidden value="<%= data[4][0].id %>" />

                <hr>

                <input type="submit" value="Update Info" class="btn btn-primary" style="float:right;" />
            </form>
        <% } %>

        <% if (data[5]) { %>
            <form action="/info/updateLocation" method="POST" id="locations">
                <h2>Location</h2>

                <label for="country">Country</label>
                <input type="text" id="country" name="country" class="form-control" required value="<%= data[5][0].country %>"/>

                <label for="city">City</label>
                <input type="text" id="city" name="city" class="form-control" required value="<%= data[5][0].city %>"/>

                <input id="id" name="id" hidden value="<%= data[5][0].id %>" />

                <hr>

                <input type="submit" value="Update Info" class="btn btn-primary" style="float:right;" />
            </form>
        <% } %>
    </div>
</main>

<%- include ('../partials/footer') %>